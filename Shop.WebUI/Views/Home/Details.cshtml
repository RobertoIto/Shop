@model Shop.Core.Models.Product

@{
    ViewBag.Title = Model.Name + "Details";
}

<h2>@Html.DisplayFor(model=>model.Name)</h2>

<div>
    <div class="col-md-2">
        @*<img class="img-responsive" src="~/ProductImages/@Model.Image"/>*@
        @{
            var base64 = Convert.ToBase64String(Model.Img);
            var imgSrc = string.Format("data:image/gif;base64,{0}", base64);
        }
        <img class="img-responsive" src="@imgSrc" />
    </div>
    
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                <br />
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                <br />
                <strong>
                    @Html.DisplayFor(model => model.Price)
                </strong>
            </dd>

            <dt></dt>
            
            <dd>
                <br />
                <a href="@Url.Action("AddToBasket", "Basket", new { Id=Model.Id })" 
                   class="btn btn-default">Add To Basket</a>
            </dd>

            <dt></dt>

        </dl>
    </div>

    <div class="col-md-12">
        <br />
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

<div class="col-md-12 clearfix"></div>
